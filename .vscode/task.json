{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-android",
            "type": "shell",
            "command": "./gradlew",
            "args": ["assembleDebug"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": ["$gradle"],
            "options": {
                "cwd": "${workspaceFolder}/android"
            }
        },
        {
            "label": "install-android",
            "type": "shell",
            "command": "adb",
            "args": ["install", "-r", "android/app/build/outputs/apk/debug/app-debug.apk"],
            "group": "build",
            "dependsOn": "build-android"
        },
        {
            "label": "run-android",
            "type": "shell",
            "command": "adb",
            "args": ["shell", "am", "start", "-n", "com.example.vulkanapp/android.app.NativeActivity"],
            "group": "build",
            "dependsOn": "install-android"
        },
        {
            "label": "logcat-vulkan",
            "type": "shell",
            "command": "adb",
            "args": ["logcat", "-s", "VulkanApp:D", "DEBUG:I"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}